<%= form_with(model: bank_transaction) do |form| %>
  <% if bank_transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bank_transaction.errors.count, "error") %> prohibited this bank_transaction from being saved:</h2>
      <ul>
        <% bank_transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :recipient_email, class: "form-label" %>
    <%= form.email_field :output_email, class: "form-control", ariaDescribedby: "emailHelp", placeholder: "Recipient email" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :amount, class: "form-label" %>
    <%= form.text_field :amount, class: "form-control", placeholder: "Enter tranfer amount" %>
  </div>

  <%= form.hidden_field(:idempotency_key, value: @idempotency_key) %>

  <div class="form-group mb-3">
    <%= submit_tag 'Submit', class: "btn btn-primary" %>
  </div>
<% end %>
