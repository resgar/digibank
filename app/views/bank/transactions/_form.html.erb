<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>
      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :recipient_email, class: "form-label" %>
    <%= form.email_field :output_email, class: "form-control", ariaDescribedby: "emailHelp", placeholder: "Recipient email" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :amount, class: "form-label" %>
    <%= form.text_field :amount, type: "number", min: "0", class: "form-control", placeholder: "Enter tranfer amount" %>
  </div>

  <%= form.hidden_field(:idempotency_key, value: new_idempotentcy_key) %>

  <div class="form-group mb-3">
    <%= submit_tag 'Submit', class: "btn btn-primary" %>
  </div>
<% end %>
